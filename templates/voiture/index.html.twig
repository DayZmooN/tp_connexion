{% extends 'base.html.twig' %}

{% block title %}Index des Voitures{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Index des Voitures</h1>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('voiture.app_voiture_new') }}" class="btn btn-primary mb-3">Créer une nouvelle voiture</a>
        {% endif %}

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Modèle</th>
                <th>Marque</th>
                <th>Composants</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if voitures is empty %}
                <tr>
                    <td colspan="{{ is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') ? 6 : 5 }}" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% else %}
                {% for voiture in voitures %}
                    <tr>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                            <td>{{ voiture.id }}</td>
                        {% endif %}
                        <td>{{ voiture.model }}</td>
                        <td>{{ voiture.marque.name }}</td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                {% for composant in voiture.composant %}
                                    <li>{{ composant.name }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{ voiture.price | number_format(2, '.', ',') }} €</td>
                        <td>
                            <a href="{{ path('voiture.show', {'id': voiture.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                                <a href="{{ path('voiture.edit', {'id': voiture.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
{#                                <a href="{{ path('') }}"></a>#}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>


    </div>
{% endblock %}
