{% extends 'base.html.twig' %}

{% block title %}Modifier la Voiture{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <div class="container mt-4">
            <h1 class="mb-4">Modifier la Voiture</h1>

            <div class="d-flex flex-wrap mb-2">

                {{ include('voiture/_form.html.twig', {'button_label': 'Mettre à jour'}) }}


                {{ include('voiture/_delete_form.html.twig') }}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('admin.voiture.index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger mt-4" role="alert">
            Ce contenu est réservé aux administrateurs.
        </div>
    {% endif %}
{% endblock %}
