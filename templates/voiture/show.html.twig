{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
        <h1>Voiture</h1>

        <table class="table">
            <tbody>
{#            <tr>#}
{#                <th>Id</th>#}
{#                <td>{{ voiture.id }}</td>#}
{#            </tr>#}
            <tr>
                <th>Model</th>
                <td>{{ voiture.model }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ voiture.price }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('voiture.index') }}">Retour à la liste</a>

    {% elseif is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <h1>Détails de la Voiture</h1>



        <a href="{{ path('voiture.index') }}">Retour à la liste</a>

        {{ include('admin/voiture/_delete_form.html.twig') }}
        <a href="{{ path('voiture.edit', {'id': voiture.id}) }}">Modifier</a>

    {% else %}
        <p>Ce contenu est réservé aux administrateurs.</p>
    {% endif %}
{% endblock %}
