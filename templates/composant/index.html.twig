{% extends 'base.html.twig' %}

{% block title %}Composant Index{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <div class="container mt-4">
            <h1 class="mb-4">Composant Index</h1>

            <div class="mb-3">
                <a href="{{ path('app_composant_new') }}" class="btn btn-primary">Créer un nouveau composant</a>
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for composant in composants %}
                    <tr>
                        <td>{{ composant.id }}</td>
                        <td>{{ composant.name }}</td>
                        <td>
                            <a href="{{ path('app_composant_show', {'id': composant.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                            <a href="{{ path('app_composant_edit', {'id': composant.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-danger mt-4" role="alert">
            Ce contenu est réservé aux administrateurs.
        </div>
    {% endif %}
{% endblock %}
