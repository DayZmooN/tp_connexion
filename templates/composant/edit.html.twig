{% extends 'base.html.twig' %}

{% block title %}Modifier le Composant{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <div class="container mt-4">
            <h1 class="mb-4">Modifier le Composant</h1>

            {{ include('composant/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('app_composant_index') }}" class="btn btn-secondary">Retour à la liste</a>
                {{ include('composant/_delete_form.html.twig') }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger mt-4" role="alert">
            Ce contenu est réservé aux administrateurs.
        </div>
    {% endif %}
{% endblock %}
