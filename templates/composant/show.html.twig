{% extends 'base.html.twig' %}

{% block title %}Composant{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <div class="container mt-4">
            <h1 class="mb-4">Détails du Composant</h1>

            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ composant.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ composant.name }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_composant_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_composant_edit', {'id': composant.id}) }}" class="btn btn-primary">Modifier</a>
            </div>

            <div class="mt-4">
                {{ include('composant/_delete_form.html.twig') }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger mt-4" role="alert">
            Ce contenu est réservé aux administrateurs.
        </div>
    {% endif %}
{% endblock %}
